  <image class='caseItemImage' src='{{caseItem.pic}}'></image>
  <view class='caseInfo'>
    <text class='caseName'>{{caseItem.name}}</text>
    <text class='casePrice'>ï¿¥{{caseItem.price}}</text>
    <text class='caseCompany'>{{caseItem.company}}</text>
