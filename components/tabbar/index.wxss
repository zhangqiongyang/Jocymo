.tabbar{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
}

.discussWrite{
  width: 260rpx;
  height: 50rpx;
  border-radius: 25px;
  border: 1px solid #FFA440;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.discussWrite image{
  width: 25rpx;
  height: 23rpx;
  padding-right: 20rpx;
  padding-left: 24rpx;
}

.discussWrite text{
  font-size: 24rpx;
  color: #FF6901;
}

.shareBox image{
  width: 36rpx;
  height: 36rpx;
  padding: 30rpx;
}

.shareButton{
  display: inline;
}
button::after {
  border: none;
}

button {
  background-color: #fff;
  height: 86rpx;
  border-radius: none;
  line-height: 37rpx;
  position: none;
}
