/* pages/tabbar/case/case.wxss */

/* 轮播图 */
.index_slideshow {
  padding-top: 88rpx;
  height: 375rpx;
}

/* 案例列表 */
.caseList{
  background-color: #F6F6F6;
  padding-top: 30rpx;
}

.caseItem{
  width: 690rpx;
  height: 517rpx;
  margin: 0 auto;
  margin-bottom: 38rpx;
  position: relative;
}

.caseItemBack{
  width: 100%;
  height: 100%;
}

.caseItemlogo{
  position: absolute;
  right: 0;
  top: 0;
  width: 136rpx;
  height: 136rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin-right: 10rpx;
}

.caseItemlogo image{
  width: 108rpx;
  height: 108rpx;
}

.caseInfo{
  height: 100rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #FFFFFF;
}

