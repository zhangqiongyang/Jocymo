/* pages/publishDemand/publishDemand.wxss */

.background {
  padding: 30rpx;
}

.formItem {
  padding-top: 40rpx;
}

.form_label {
  padding-bottom: 20rpx;
  display: block;
}

.form_input {
  width: 690rpx;
  height: 88rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 20rpx;
}

.form_input_min {
  width: 205rpx;
  height: 88rpx;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form_textarea {
  width: 690rpx;
  height: 233rpx;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.form_priceBox {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.form_priceBox_line {
  padding: 0 10rpx;
}

.discussPersonallyHover {
  color: #ff6901;
  padding-left: 30rpx;
}

.discussPersonally {
  padding-left: 30rpx;
}

.placeholder {
  font-size: 30rpx;
  font-weight: 400;
  line-height: 48px;
  color: #999;
}

.submitForm {
  width: 690rpx;
  height: 88rpx;
  background: #ff6901;
  border-radius: 8rpx;
  margin: 0 auto;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  font-size: 36rpx;
  font-weight: 500;
}

/* 省市区选择器 */

.pickerView {
  border: 1px solid #ccc;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  color: #999;
  border-radius: 8rpx;
}

.pickerView image {
  width: 28rpx;
  height: 28rpx;
}

/* 手机验证 */

.code_box {
  margin-top: 20rpx;
  position: relative;
}

.code-btn {
  position: absolute;
  right: 0;
  top: 0;
  margin: 10rpx;
  width: 226rpx;
  height: 68rpx;
  background: #fea961;
  border-radius: 8rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
