/* 作者信息 */

.authorInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #CCCCCC;
  height: 300rpx;
  align-items: center;
}

.authorBackground{
  position:absolute;
  width: 100%;
  top: 0;
  height: 300rpx;
}

.author {
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 40rpx 30rpx;
  /* align-items: baseline; */
}


.authorImage image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 14rpx;
}

.authorText {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  padding-top: 136rpx;
}

.authorName {
  font-size: 36rpx;
  padding-bottom: 20rpx;
  color: #ffffff;
}

.authorIntroduce {
  font-size: 24rpx;
  color: #ffffff;
}
