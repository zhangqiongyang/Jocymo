/* pages/sub_newsSearch/pages/newsDetails/newsDetails.wxss */
@import "/wxParse/wxParse.wxss";

view {
  overflow: visible;
}

/* video */


.video {
  width: 100%;
  height: 420rpx;
  /* position: sticky;
  top: 0.1px;
  left: 0; */
}
.video_placeholder{
  width: 100%;
  height: 420rpx;
}
.mask {
  width: 100%;
  height: 420rpx;
  background-color: #00000099;
  color: #fff;
  /* display: flex;
  align-items: center;
  justify-content: center; */
  line-height: 560rpx;
  text-align: center;
  font-size: 28rpx;
}

.videoContent {
  /* padding: 0 30rpx 0 30rpx; */
  width: 100%;
}

/* 文章标题 */

.articleTitle {
  padding: 0 30rpx 0 30rpx;
}

.article_title {
  font-size: 44rpx;
  display: block;
  padding: 38rpx 0 68rpx 0;
}

.article_articleInfo {
  display: flex;
  flex-direction: row;
}

.article_authorInfo {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}

.article_time {
  display: inline-block;
  font-size: 20rpx;
  color: #999;
  padding-top: 12rpx;
}

.article_author {
  font-size: 26rpx;
}

.article_authorImg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

/* 播放器样式 */


.articleAudio{
  padding: 30rpx 30rpx 10rpx 30rpx;
  /* padding-bottom: 50rpx; */
}
.audio_mask{
  width:694rpx;
  height:158rpx;
  position: absolute;
  background-color: #00000099;
  color: #fff;
  line-height: 158rpx;
  text-align: center;
  font-size: 28rpx;
}
.player{
  width:100%;
  height:158rpx;
  border:1px solid #EAEAEA;
  /* padding: 38rpx 20rpx 40rpx 32rpx; */
  /* box-sizing: border-box; */
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
}



.playerIcon{
  width: 130rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.playerIcon image{
  width:58rpx;
  height:58rpx;
}
.playStop{
  width:30rpx;
  height:30rpx;
}




.playerInfo{
  width: 480rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center;
  align-content: center; */
}
.player_article_title{
  font-size: 30rpx;
  color: #353535;
  width: 100%;
  display: inline-block;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
  padding-top: 38rpx;
}
.player_article_audioInfo{
  display: flex;
  flex-direction: row;
  width: 100%;
  /* align-content: center;
  align-items: center; */
  padding-top: 18rpx;
}
.player_article_audioInfo image{
  height: 14px;
  width: 1px;
  padding-left: 10rpx;
}
.player_article_declaimer{
  color: #666666;
  font-size: 20rpx;
}
.player_article_time{
  color: #999999;
  font-size: 20rpx;
  padding-left: 60rpx;
}
.player_article_size{
  color: #7EBBF4;
  font-size: 20rpx;
  padding-left: 10rpx;
}




.playerDown{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.playerDown image{
  width: 84rpx;
  height: 84rpx;
}


/* 文章主体 */

.articleContent {
  padding: 40rpx 30rpx;
  font-size: 32rpx;
  color: #353535;
}

.articleContent text {
  font-size: 32rpx;
  color: #353535;
}



